{
    "name": "@kjts20/tool",
    "version": "0.0.85",
    "description": "wkj",
    "miniprogram": "dist",
    "main": "dist/index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/kjts20/tool.git"
    },
    "scripts": {
        "build:ts": "tsup",
        "build:css:browser": "sass src/style/browser.scss dist/browser.css --style=compressed --no-source-map",
        "build:css:wx": "sass src/style/wx.scss dist/wx.wxss --style=compressed --no-source-map",
        "dev": "tsup --watch",
        "build": "npm run build:ts && npm run build:css:browser && npm run build:css:wx",
        "prepublishOnly": "npm run build",
        "pub": "npm version patch && npm publish",
        "test": "jest",
        "test:dev": "jest --watchAll",
        "test:coverage": "jest --coverage"
    },
    "keywords": [
        "sskj",
        "工具包"
    ],
    "author": "wkj",
    "license": "Apache",
    "devDependencies": {
        "@babel/core": "^7.20.2",
        "@babel/preset-env": "^7.20.2",
        "@babel/preset-typescript": "^7.18.6",
        "@types/jest": "^29.2.3",
        "babel-jest": "^29.3.1",
        "jest": "^29.3.1",
        "tsup": "^6.4.0",
        "sass": "^1.56.1",
        "typescript": "^4.8.4"
    },
    "prettier": {
        "tabWidth": 4,
        "printWidth": 160,
        "eslintIntegration": true,
        "stylelintIntegration": true,
        "singleQuote": true,
        "semi": true,
        "insertPragma": false,
        "trailingComma": "none",
        "arrowParens": "avoid"
    },
    "files": [
        "dist"
    ],
    "dependencies": {}
}
